@compiletime
function create_im_au()
	var editor = EditorHelper.create_aura('imau')
	editor..setArtTarget("xiwa.mdx")
		..setName("im")
		..setBuffs(1, "imid")
	destroy editor

@compiletime
function create_im_id()
	var editor = new BuffDefinition('imid', 'Bdet')
	editor..setName(1, "IceMage")
		..setTooltipNormal(1, Color_Define.COLOR_ICEMAGE + "Ice Mage")
		..setTooltipNormalExtended(1, Color_Define.COLOR_COOL_DOWN + "You are master of ice!")
		..setIconNormal(1, "IM.blp")

@compiletime
function create_im_mgcbook()
	var editor = EditorHelper.create_magic_book('imbk', "imau")
