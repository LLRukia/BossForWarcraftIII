package IceMage
import public PlayerUnitHelper
import public PlayerUnit
import ExternalDefines
import HashMap
import public IceMageSkill
import EditorHelper
import BuffObjEditing

public class IceMage extends PlayerUnit
	construct(player pl, unit u)
		super(pl, u)
		m_self_career = ice_mage
		init_self()
		listen_all()
		u.hideAbility('imbk', true)

	override function init_self() 
		m_mapSkill.put(IceBarrier.self_id, new IceBarrier(m_self_unit))
		m_mapSkill.put(IceLance.self_id, new IceLance(m_self_unit))
		m_mapSkill.put(ConeofCold.self_id, new ConeofCold(m_self_unit))
		m_mapSkill.put(ForstBolt.self_id, new ForstBolt(m_self_unit))
		m_mapSkill.put(IceSpirit.self_id, new IceSpirit(m_self_unit))


